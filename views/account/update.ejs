<main class="account-page">
    <h1><%= title %></h1>

    <!-- Flash message if any -->
    <% if (notice && notice.length > 0) { %>
    <div class="info-message"><p><%= notice[0] %></p></div>
    <% } %>

    <!-- Validation errors -->
    <% if (errors && errors.length > 0) { %>
    <ul class="notice">
        <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>

    <!-- ACCOUNT INFORMATION UPDATE -->
        <h2>Update Account Information</h2>
        <form action="/account/update-info" method="post" id="account-form">
            <!-- Hidden field with account ID -->
            <input type="hidden" name="account_id" value="<%= accountId %>">

            <!-- First Name -->
            <label for="account_firstname">First Name:
                <input
                type="text"
                id="account_firstname"
                name="account_firstname"
                required
                value="<%= locals.account_firstname || accountData?.account_firstname || '' %>">
            </label>

            <!-- Last Name -->
            <label for="account_lastname">Last Name:
                <input
                type="text"
                id="account_lastname"
                name="account_lastname"
                required
                value="<%= locals.account_lastname || accountData?.account_lastname || '' %>">
            </label>

            <!-- Email -->
            <label for="account_email">Email:
                <input
                type="email"
                id="account_email"
                name="account_email"
                required
                value="<%= locals.account_email || accountData?.account_email || '' %>">
            </label>

            <!-- Submit -->
            <button type="submit">Update Info</button>
        </form>
    </section>

    <!-- PASSWORD CHANGE SECTION -->
    <h2>Change Password</h2>

    <!-- Instructional Text -->
    
    <form action="/account/update-password" method="post" id="account-form">
        <p>
            To change your password, enter a new one below. It must be at least 12 characters long, 
            including 1 uppercase letter, 1 number, and 1 special character.
        </p>
        <!-- Hidden field with account ID -->
        <input type="hidden" name="account_id" value="<%= accountId %>">

        <!-- New Password Field -->
        <label for="account_password">New Password:
            <input
            type="password"
            id="account_password"
            name="account_password"
            pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[^A-Za-z\d]).{12,}$"
            required>
        </label>

        <button type="submit">Change Password</button>
    </form>
</main>