<main class="account-page">
    <h1>
        <%= title %>
    </h1>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
            <% }) %>
        </ul>
    <% } %>

    <form action="/account/register" method="post" id="account-form">
        <label for="fname">First Name:
            <input type="text" name="account_firstname" id="fname" required
                value="<%= locals.account_firstname %>">
        </label>

        <label for="lname">Last Name:
            <input type="text" name="account_lastname" id="lname" required
                value="<%= locals.account_lastname %>">
        </label>

        <label for="email">Email Address:

            <input type="email" id="email" name="account_email" required>
        </label>

        <label for="password">Password:

            <input type="password" id="password" name="account_password" pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[^A-Za-z\d]).{12,}$" required>
        </label>

        <br>

        <button type="submit">Register</button>
    </form>
    <p>
        Already have an account?
        <a href="/account/login">Login</a>
    </p>
</main>