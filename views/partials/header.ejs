<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (locals.loggedin) { %>
            <% if (locals.accountData && locals.accountData.account_firstname && locals.accountData.account_id) { %>
                <a class="welcome-message" href="/account" title="Go to Account Management">Welcome, <%= locals.accountData.account_firstname %>!</a>
            <% } %>
            <a title="Click to log out" href="/account/logout">Logout</a>
        <% } else { %>
            <a title="Click to log in" href="/account">My Account</a>
        <% } %>
    </div>
</header>